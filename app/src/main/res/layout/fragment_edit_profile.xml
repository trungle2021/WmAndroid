<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_edit_profile"
    tools:context=".Fragment.EditProfileFragment">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:paddingBottom="100dp"
            android:orientation="vertical">

            <!--    SignUp Header-->
            <TextView
                android:id="@+id/arrowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/icon_arrow_back"
                android:clipToOutline="true" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="Edit Profile"
                android:textAppearance="@style/login"
                android:textStyle="bold" />


            <!--    Form Register-->
            <LinearLayout
                android:id="@+id/frame_6"
                android:layout_width="342dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:orientation="vertical">


                <!--        First Name-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="First Name"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="15dp"
                    android:hint="Your First Name"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />

                <!--        Last Name-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="Last Name"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="15dp"
                    android:hint="Your Last Name"
                    android:paddingLeft="8dp"

                    android:textSize="15sp" />

                <!--        Username-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="Username"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="15dp"
                    android:hint="Your Phone"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />

                <!--        Email-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="Email"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="15dp"
                    android:hint="Your Email"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="Address"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="15dp"
                    android:hint="Your Address"
                    android:paddingLeft="8dp"

                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="Username"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="15dp"
                    android:hint="Your Username"
                    android:paddingLeft="8dp"

                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="Password"
                    android:textColor="#312E49"
                    android:textSize="14sp" />

                <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tvPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/ip_round_shape"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="15dp"
                    android:inputType="textPassword"
                    android:hint="Your Password"
                    android:paddingLeft="8dp"

                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/radioGenderGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/radioMale"
                    >

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radio_selector"
                        android:button="@drawable/radio_null_button"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:text="Male"
                        android:textColor="@drawable/radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/radio_selector"
                        android:button="@drawable/radio_null_button"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:text="Female"
                        android:textColor="@drawable/radio_text_selector" />
                </RadioGroup>

            </LinearLayout>


            <!--Submit Register Button-->
            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-thin"
                android:text="Save Changes"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SmallSp"></Button>




        </LinearLayout>

    </ScrollView>

</FrameLayout>









