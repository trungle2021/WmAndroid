<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.BookingDetailFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/foodSpinnerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/txtTableAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Table Amount"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Starter Food" />

        <Spinner
            android:id="@+id/foodSpinnerStarter"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Main Food" />

        <Spinner
            android:id="@+id/foodSpinnerMain1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/foodSpinnerMain2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/foodSpinnerMain3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/foodSpinnerMain4"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/foodSpinnerMain5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dessert Food" />

        <Spinner
            android:id="@+id/foodSpinnerDessert"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btnAddFoodDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Food Detail" />
    </LinearLayout>


</FrameLayout>