<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LoginActivity">


<!--    Login Header-->


    <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="86dp"
            android:text="Login"
        android:textSize="30dp"
            android:textStyle="bold|normal"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@style/login"
            android:gravity="center_horizontal|top"
            />
<!--    Form Login-->
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_6"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

<!--        Username-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textColor="#312E49"
                android:gravity="top"
                android:layout_marginBottom="8dp"
               />

        <EditText
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="15dp"
                android:paddingLeft="8dp"
                android:hint="Your username"
                android:textSize="15sp"
                android:background="@drawable/ip_round_shape"
                 tools:ignore="SmallSp"
                />

<!--        Password-->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#312E49"
                android:gravity="top"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:text="Password"/>

        <EditText
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_lock"
                android:paddingLeft="8dp"
                android:drawablePadding="15dp"
                android:hint="Your Password"
                android:textSize="15sp"
                tools:ignore="SmallSp"
                android:background="@drawable/ip_round_shape"
                />

<!--        Forgot Password-->

        <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#2805FF"
                android:gravity="top"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:text="Forgot Password ?"/>

    </LinearLayout>
<!--Submit Form Button-->
    <Button
            android:id="@+id/btnLogin"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:text="Login"
            android:fontFamily="sans-serif-thin"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"
            android:backgroundTint="#B1A6FA"
            tools:ignore="SmallSp">

    </Button>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="185dp"
        >
        <TextView
            android:id="@+id/textSignUp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Don't have an account?"
            android:layout_centerHorizontal="true"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textSize="16dp"
            android:layout_toEndOf="@id/textSignUp1"
            android:textColor="#2805FF"

            />
    </LinearLayout>
</LinearLayout>




