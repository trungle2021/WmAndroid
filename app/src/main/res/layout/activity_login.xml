<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AuthActivity.LoginActivity">


<!--    Login Header-->
    <TextView
            android:id="@+id/login"
            android:layout_width="71dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="86dp"
            android:text="Login"
            android:textAppearance="@style/login"
            android:gravity="center_horizontal|top"
            />
<!--    Form Login-->
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_6"
            android:layout_width="342dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="156dp"
            android:orientation="vertical">

<!--        Username-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textColor="#312E49"
                android:gravity="top"
                android:layout_marginBottom="8dp"
               />

        <EditText
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="15dp"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content"
                android:hint="Your username"
                android:textSize="15sp"
                android:background="@drawable/ip_round_shape"
                />

<!--        Password-->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#312E49"
                android:gravity="top"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:text="Password"/>

        <EditText
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_lock"
                android:paddingLeft="8dp"
                android:drawablePadding="15dp"
                android:layout_height="wrap_content"
                android:hint="Your Password"
                android:textSize="15sp"

                android:background="@drawable/ip_round_shape"
                />

<!--        Forgot Password-->

        <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#2805FF"
                android:gravity="top"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:text="Forgot Password ?"/>

    </LinearLayout>
<!--Submit Form Button-->
    <RelativeLayout
            android:id="@+id/btnLogin"
            android:layout_width="342dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="403dp"
            android:background="@drawable/button"
            >

        <TextView
                android:id="@+id/button_labe"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="Login"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:layout_centerInParent="true"/>


    </RelativeLayout>

    <TextView
            android:id="@+id/textSignUp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="690dp"
            android:textSize="16sp"
            android:text="Don't have an account?"
            android:layout_centerHorizontal="true"

            />

    <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="273dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="690dp"
            android:layout_centerHorizontal="true"
            android:text="Signup"
            android:textSize="16sp"
            android:layout_toEndOf="@id/textSignUp1"
            android:textColor="#2805FF"
            />
</RelativeLayout>




